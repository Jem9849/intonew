
<h1>Portfolio Items</h1>

<%= link_to "Create A NEWIE WOO", new_portfolio_url %>

<% @portfolios.each do |portfolio| %>
  <p><%= link_to portfolio.title, portfolio_path(portfolio) %></p>
  <p><%= portfolio.subtitle %></p>
  <p><%= portfolio.body %></p>
  <%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(portfolio) %>
  <%= link_to "DELETE DIS PORTFELLIO ETEM *RAWR*", portfolio_path(portfolio), method: :delete, data: {
    confirm: 'ARE YOU SUR?'} %>
<% end %>