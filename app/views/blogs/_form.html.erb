<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
   <% blog.errors.full_messages.each do |error| %>
     <%= alert_gen error %>
   <% end %>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, class: "form-control", Placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, class: "form-control", rows: 15, Placeholder: 'Body' %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit BOIIIIIIIIII", class: "btn btn-primary" %>
  </div>
<% end %>